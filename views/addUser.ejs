<div class="row mt-5 justify-content-md-center">
    <div class="card-body">
        <h1 class="text-center mb-3">
            <i class="fas fa-user-plus"></i> Add New User
        </h1>
        <a href="/menu/manage/" class="btn btn-secondary mr-1"><i class="fas fa-users"></i> All Users</a>
        <a href="/menu/manage/addUser" class="btn btn-secondary disabled"><i class="fas fa-user-plus"></i> Add User</a>
        <div class="card mt-2" style="width: 20rem;">
            <div class="card-body">
                <% include ./partials/messages.ejs %>
                <form action="/menu/manage/addUserForm" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input
                                type="name"
                                id="name"
                                name="name"
                                class="form-control"
                                placeholder="Enter Name"
                        />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-control"
                                placeholder="Enter Email"
                        />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input
                                type="password"
                                id="password"
                                name="password"
                                class="form-control"
                                placeholder="Create Password"
                        />
                    </div>
                    <div class="form-group">
                        <input class="form-group-input" type="radio" name="isAdmin" id="role1" value="true" checked>
                        <label class="form-group-label mb-lg-2" for="role1">
                            User
                        </label>
                    </div>

                    <div class="form-group">
                        <input class="form-group-input" type="radio" name="isAdmin" id="role2" value="true">
                        <label class="form-group-label mb-lg-2" for="role2">
                            Admin
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">
                        Add
                    </button>
                </form>
            </div>
        </div>
        <a href="/menu" class="btn btn-secondary mt-2"><i class="fas fa-undo-alt"></i> Back to menu</a>
    </div>
</div>

